<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/itemContainer"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@color/text_white"
                android:minHeight="20dip"
                android:orientation="horizontal"
        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            >

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"
                android:layout_marginLeft="5dip"/>

        <TextView
                android:id="@+id/pl_header_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pl_return_game"
                android:textColor="@color/text_endless_red"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:padding="2dip"
                />
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:id="@+id/pl_header_center"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_black_33"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/text_black_33"
            android:textSize="16sp"/>
    <ImageView android:layout_width="match_parent" android:layout_height="0.5dip"
               android:background="@color/line"
               android:layout_alignParentBottom="true"
               android:layout_marginTop="5dip"/>
</RelativeLayout>