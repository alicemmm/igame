<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/public_bg">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <RelativeLayout
                    android:id="@+id/rank_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:background="@color/text_white"
                    >
                <Button android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_relative"
                        android:textSize="@dimen/text_default"
                        android:drawableLeft="@drawable/arrow_back"
                        android:background="@color/transparent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dip"
                        android:padding="2dip"
                        android:text="@string/text_back"
                        android:textColor="@color/text_endless_red"
                        />
                <TextView
                        android:id="@+id/title"
                        style="@style/text_login"
                        android:layout_centerInParent="true"
                        android:text="@string/text_modify_nick"
                        />
                <TextView
                        android:id="@+id/finish"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        style="@style/text_login"
                        android:text="@string/text_save"
                        android:padding="10dp"
                        />
                <ImageView android:layout_width="match_parent" android:layout_height="0.5dip"
                           android:background="@color/line"
                           android:layout_alignParentBottom="true"
                           android:layout_marginTop="5dip"/>
            </RelativeLayout>

            <EditText
                    android:id="@+id/nick_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:singleLine="true"
                    android:textColor="@color/text_black_33"
                    />

            <TextView
                    android:id="@+id/tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_pay"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>