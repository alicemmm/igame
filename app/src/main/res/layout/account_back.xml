<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/public_bg">
    <include layout="@layout/title"/>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                >

            <ImageView android:layout_width="fill_parent" android:layout_height="0.5dip"
                       android:background="@color/line" android:layout_marginTop="30dip"/>
            <RelativeLayout
                    android:id="@+id/account_auto_back"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_relative"
                    android:background="@color/text_white"
                    style="@style/padding_item"
                    android:visibility="gone"
                    >
                <TextView
                        android:id="@+id/txt_account"
                        android:text="@string/text_auto_accountback"
                        style="@style/text_login"
                        android:layout_marginLeft="5dip"
                        />
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:background="@drawable/arrow_right"
                           android:layout_alignParentRight="true"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="5dip"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/account_form"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_relative"
                    android:background="@color/text_white"
                    style="@style/padding_item"
                    >
                <TextView
                        android:id="@+id/txt_account"
                        android:text="@string/text_hb_accountback"
                        style="@style/text_login"
                        android:layout_marginLeft="5dip"
                        />
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:background="@drawable/arrow_right"
                           android:layout_alignParentRight="true"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="5dip"/>
            </RelativeLayout>
            <ImageView android:layout_width="fill_parent" android:layout_height="0.5dip"
                       android:background="@color/line"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="10dip"
                          android:paddingRight="10dip"
                          android:paddingBottom="5dip"
                    >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:text="@string/account_back_tip"
                        android:textColor="@color/text_grey_999999"
                        android:layout_marginTop="@dimen/height_35"
                        />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>