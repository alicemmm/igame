<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/public_bg">

    <include layout="@layout/title"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <ImageView android:layout_width="match_parent" android:layout_height="0.5dip"
                       android:background="@color/line" android:layout_marginTop="20dip"/>
            <RelativeLayout
                    android:background="@color/text_white"
                    style="@style/user_padding"
            >
                <TextView
                        android:id="@+id/head_title_account"
                        style="@style/text_login"
                        android:layout_alignParentLeft="true"
                        android:text="@string/text_account"
                />
                <TextView
                        android:id="@+id/txt_account_user"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_relative"
                        android:gravity="center_vertical|left"
                        style="@style/text_login"
                        android:focusable="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:focusableInTouchMode="true"
                        android:layout_alignParentRight="true"
                />
            </RelativeLayout>
            <ImageView android:layout_width="match_parent" android:layout_height="0.5dip"
                       android:background="@color/line"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:background="@color/text_white"
                          android:layout_marginTop="10dip">

                <ImageView android:layout_width="match_parent" android:layout_height="0.5dip"
                           android:background="@color/line"/>
                <RelativeLayout
                        android:id="@+id/rl_userinfo"
                        android:background="@color/text_white"
                        style="@style/user_padding"
                        android:visibility="gone"
                >
                    <TextView
                            android:text="@string/text_userinfo"
                            style="@style/text_login"
                            android:layout_alignParentLeft="true"
                    />
                    <TextView
                            android:id="@+id/account_edt"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/btn_relative"
                    />
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                               android:background="@drawable/arrow_right"
                               android:layout_alignParentRight="true"
                               android:layout_centerVertical="true"
                               android:layout_marginRight="5dip"/>
                </RelativeLayout>
                <ImageView
                        android:id="@+id/img_line_1"
                        android:layout_width="fill_parent" android:layout_height="0.5dip"
                        android:layout_marginLeft="10dip"
                        android:background="@color/line"
                        android:visibility="gone"/>
                <RelativeLayout
                        android:id="@+id/rl_email"
                        android:background="@color/text_white"
                        style="@style/user_padding"
                >
                    <TextView
                            android:id="@+id/password_txt"
                            android:text="@string/text_email"
                            style="@style/text_login"
                            android:layout_alignParentLeft="true"
                    />
                    <TextView
                            android:id="@+id/txt_email"
                            android:layout_marginLeft="60dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="90dip"
                            android:background="@color/transparent"
                            android:textColorHint="@color/text_def"
                            android:lines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/text_default"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical|left"
                            android:layout_alignParentRight="true"
                    />
                    <TextView
                            android:id="@+id/txt_email_bind"
                            style="@style/text_user"
                            android:layout_alignParentRight="true"
                            android:text="@string/text_verify_email"
                            android:layout_centerVertical="true"
                    />
                </RelativeLayout>
                <ImageView android:layout_width="fill_parent" android:layout_height="0.5dip"
                           android:layout_marginLeft="10dip"
                           android:background="@color/line"
                           android:id="@+id/img_line"
                           android:visibility="gone"
                />
                <RelativeLayout
                        android:id="@+id/rl_phone"
                        android:background="@color/text_white"
                        style="@style/user_padding"
                        android:visibility="gone"
                >
                    >
                    <TextView
                            android:id="@+id/password_txt"
                            android:text="@string/text_phonenum"
                            style="@style/text_login"
                            android:layout_alignParentLeft="true"
                    />
                    <TextView
                            android:id="@+id/txt_phone"
                            android:layout_marginLeft="70dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="90dip"
                            android:background="@color/transparent"
                            android:hint=""
                            android:textColorHint="@color/line"
                            android:lines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/text_default"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical|left"
                            android:layout_alignParentRight="true"
                    />
                    <TextView
                            android:id="@+id/txt_phone_bind"
                            style="@style/text_user"
                            android:layout_alignParentRight="true"
                            android:text="@string/text_bindnow"
                            android:layout_centerVertical="true"
                    />
                </RelativeLayout>

                <ImageView android:layout_width="fill_parent" android:layout_height="0.5dip"
                           android:background="@color/line"/>
            </LinearLayout>
            <RelativeLayout
                    android:id="@+id/rl_more_game"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/btn_relative"
                    android:background="@color/text_green"
                    android:gravity="center_vertical"
                    android:layout_marginTop="30dip"
                    android:visibility="gone"
            >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="@dimen/text_default"
                          android:text=""
                          android:textColor="@color/text_white"
                          android:layout_marginLeft="10dip"
                />
            </RelativeLayout>

            <ImageView android:layout_width="fill_parent" android:layout_height="0.5dip"
                       android:background="@color/line"
                       android:layout_marginTop="10dip"
            />
            <RelativeLayout
                    android:id="@+id/rl_update_pwd"
                    android:background="@color/text_white"
                    style="@style/user_padding"
            >
                <TextView
                        android:text="@string/text_updatepwd"
                        style="@style/text_login"
                        android:layout_alignParentLeft="true"
                />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                />
            </RelativeLayout>
            <ImageView android:layout_width="fill_parent" android:layout_height="0.5dip"
                       android:background="@color/line"
            />
            <ImageView android:layout_width="fill_parent" android:layout_height="0.5dip"
                       android:background="@color/line"
                       android:layout_marginTop="10dip"
            />
            <RelativeLayout
                    android:id="@+id/rl_pay_history"
                    android:background="@color/text_white"
                    style="@style/user_padding"
            >
                <TextView
                        android:text="@string/text_paylist"
                        style="@style/text_login"
                        android:layout_alignParentLeft="true"
                />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                />
            </RelativeLayout>
            <ImageView android:layout_width="fill_parent" android:layout_height="0.5dip"
                       android:background="@color/line"
            />

            <RelativeLayout
                    android:id="@+id/rl_update_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
            >
                <TextView
                        android:text="@string/text_code_tips_3"
                        style="@style/text_login"
                        android:layout_centerHorizontal="true"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_exit"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/btn_relative"
                    android:clickable="true"
                    android:background="@drawable/rl_selector_exit"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dip"
            >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="@dimen/text_default"
                          android:text="@string/text_logout_account"
                          android:textColor="@color/text_endless_red"
                          android:layout_centerHorizontal="true"
                />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>