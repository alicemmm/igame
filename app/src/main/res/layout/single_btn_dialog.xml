<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dialog_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/dialog_bg"
              android:gravity="center_vertical"
        >
    <LinearLayout android:layout_width="280dip" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="center_horizontal"
                  android:background="@color/bg_transparent_90"
            >
        <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="@color/text_black_33"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_import"
                android:textSize="@dimen/text_default"
                />
        <TextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textColor="@color/text_black_33"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textSize="18dp"
                />
        <ImageView android:layout_width="fill_parent" android:layout_height="0.5dip"
                   android:background="@color/line"/>
        <Button
                android:id="@+id/dialog_ensure_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_relative"
                android:layout_alignParentBottom="true"
                android:textColor="@color/text_blue"
                android:text="@string/text_enter"
                android:clickable="true"
                android:background="@drawable/dialog_selector"
                android:textSize="18dp"
                android:layout_gravity="center_horizontal"
                />
    </LinearLayout>
</LinearLayout>